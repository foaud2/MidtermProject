<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.new2_Fragments">
    <LinearLayout
        android:id="@+id/nav_prof"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/f"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:id="@+id/linehome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/TV_home"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:text="Home"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineBrowse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgsersh"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search" />

            <TextView
                android:id="@+id/TVsersh"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="Browse"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lineWishlist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgWishlist"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/heart" />

            <TextView
                android:id="@+id/TVWishlist"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:text="Wishlist"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lineProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profil_2" />

            <TextView
                android:id="@+id/TVProfile"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:text="Profile"
                android:textColor="@color/TealBlue"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>