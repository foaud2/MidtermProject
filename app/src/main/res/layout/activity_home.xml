<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.home"
    android:background="@color/f"
    >

    <SearchView
        android:id="@+id/searchViewhome"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        />
    <ImageButton
        android:id="@+id/icontop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchViewhome"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/searchViewhome"
        app:layout_constraintBottom_toTopOf="@+id/nav_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imghome1"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:src="@drawable/imghome_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv4_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Best Seller In This Season"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imghome1" />

            <TextView
                android:id="@+id/tv4_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Get to know about most popular items"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv4_1"
                android:layout_marginTop="12dp"
                android:textSize="18dp"

                />

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/tv4_4"
                app:layout_constraintTop_toBottomOf="@+id/tv4_2"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="0dp">


            </FrameLayout>

            <ImageButton
                android:background="@color/white"
                android:id="@+id/imghome2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/imghome1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv4_2" />

            <ImageButton
                android:background="@color/white"
                android:id="@+id/imghome3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/imghome4"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv4_2" />

            <ImageButton
                android:background="@color/white"
                android:id="@+id/imghome4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/imghome3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imghome2"
                app:layout_constraintTop_toBottomOf="@+id/tv4_2" />

            <ImageButton
                android:background="@color/white"
                android:id="@+id/imghome5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/imghome2"
                app:layout_constraintEnd_toStartOf="@+id/imghome4"
                app:layout_constraintStart_toEndOf="@+id/imghome2"
                app:layout_constraintTop_toBottomOf="@+id/tv4_2" />

            <TextView
                android:id="@+id/tv4_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kid"
                app:layout_constraintEnd_toEndOf="@+id/imghome4"
                app:layout_constraintStart_toStartOf="@+id/imghome4"
                app:layout_constraintTop_toBottomOf="@+id/imghome2"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv4_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoes"
                app:layout_constraintEnd_toEndOf="@+id/imghome3"
                app:layout_constraintStart_toStartOf="@+id/imghome3"
                app:layout_constraintTop_toBottomOf="@+id/imghome5"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv4_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Woman"
                app:layout_constraintEnd_toEndOf="@+id/imghome2"
                app:layout_constraintStart_toStartOf="@+id/imghome2"
                app:layout_constraintTop_toBottomOf="@+id/imghome4"
                android:textColor="@color/TealBlue"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/tv4_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Man"
                app:layout_constraintEnd_toEndOf="@+id/imghome5"
                app:layout_constraintStart_toStartOf="@+id/imghome5"
                app:layout_constraintTop_toBottomOf="@+id/imghome3"
                android:layout_marginTop="5dp"
                />

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="195dp"
                android:layout_height="380dp"
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_marginTop="20dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

                <ImageView
                    android:id="@+id/im4_1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imgsearch1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/tv4_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Woman" />

                    <TextView
                        android:id="@+id/tv4_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="$100"
                        android:textColor="@color/TealBlue" />

                    <TextView
                        android:id="@+id/tv4_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="T-Shirt 1"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv4_10"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:text="(5.0)"
                            android:textColor="@color/green" />

                        <RatingBar
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:numStars="5"
                            android:rating="4.5"
                            android:scaleX="0.7"
                            android:scaleY="0.7" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv4_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="600+ item Sold Out" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="195dp"
                android:layout_height="380dp"
                android:layout_marginRight="8dp"
                android:background="@color/TealBlue"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

                <ImageView
                    android:id="@+id/im4_2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imgsearch2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/tv4_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Woman"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv4_15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="$50"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv4_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="T-Shirt 2"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv4_17"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:text="(5.0)"
                            android:textColor="@color/green" />

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="4.5"
                            android:scaleX="0.7"
                            android:scaleY="0.7" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv4_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="600+ item Sold Out"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/f"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/linehome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home_2" />

            <TextView
                android:id="@+id/TV_home"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:text="Home"
                android:textColor="@color/TealBlue"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineBrowse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgsersh"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search" />

            <TextView
                android:id="@+id/TVsersh"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="Browse"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linesearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgWishlist"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/heart" />

            <TextView
                android:id="@+id/TVWishlist"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:text="Wishlist"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lineProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/account" />

            <TextView
                android:id="@+id/TVProfile"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

