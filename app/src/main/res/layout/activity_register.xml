<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Login"
    android:background="@color/f"
    >

    <TextView
        android:id="@+id/tv2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        />

    <RelativeLayout
        android:id="@+id/R"
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2_1"
        android:background="@color/f"
        >
        <TextView
            android:id="@+id/tv2_a1"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full name:"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <EditText
            android:paddingLeft="10dp"
            android:id="@+id/ed2_a1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Insert full name"
            android:inputType="textWebEmailAddress"
            android:layout_below="@+id/tv2_a1"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv2_a2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot name?"
            android:layout_below="@id/ed2_a1"
            android:layout_alignParentRight="true"
            android:textSize="13dp"
            android:layout_marginRight="18dp"
            />


        <TextView
            android:id="@+id/tv2_2"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@+id/tv2_a2"/>
        <EditText
            android:paddingLeft="10dp"
            android:id="@+id/ed2_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Insert Email Address"
            android:inputType="textWebEmailAddress"
            android:layout_below="@+id/tv2_2"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Email?"
            android:layout_below="@id/ed2_1"
            android:layout_alignParentRight="true"
            android:textSize="13dp"
            android:layout_marginRight="18dp"
            />
        <TextView
            android:id="@+id/tv2_4"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/tv2_3"
            />
        <EditText
            android:id="@+id/ed2_2"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Insert Password"
            android:inputType="textPassword"
            android:layout_below="@+id/tv2_4"
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/tv2_5"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:layout_below="@id/ed2_2"
            android:layout_alignParentRight="true"
            android:textSize="13dp"
            android:layout_marginRight="18dp"
            />
        <TextView
            android:id="@+id/tv2_a3"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="confirm password:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/tv2_5"
            />
        <EditText
            android:id="@+id/ed2_a2"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Insert Password"
            android:inputType="textPassword"
            android:layout_below="@+id/tv2_a3"
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/tv2_a4"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:layout_below="@id/ed2_a2"
            android:layout_alignParentRight="true"
            android:textSize="13dp"
            android:layout_marginRight="18dp"
            />
        <TextView
            android:id="@+id/tv2_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have any account?"
            android:textSize="20sp"
            android:layout_below="@+id/tv2_a4"
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/Bu2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_toRightOf="@id/tv2_6"
            android:layout_below="@id/tv2_a4"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"


            />
        <Button
            android:id="@+id/Bu2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Register"
            android:layout_below="@id/tv2_6"
            android:backgroundTint="@color/TealBlue"

            />
        <TextView
            android:id="@+id/tv2_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="OR"
            android:layout_below="@id/Bu2_2"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/Bu2_3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv2_7"
            android:text="google"
            android:layout_toRightOf="@+id/tv2_7"
            android:backgroundTint="@color/TealBlue"

            />
        <Button
            android:id="@+id/Bu2_4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv2_7"
            android:text="Facebook"
            android:layout_toLeftOf="@+id/tv2_7"
            android:backgroundTint="@color/TealBlue"

            />


    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>